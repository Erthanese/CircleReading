<Page
    x:Class="CircleReading.DetailReadingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CircleReading"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer x:Uid="ContentScrollViewer" x:Name="ContentScrollViewer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{ThemeResource BackgroundBrush}">
            <RichTextBlock Margin="10,160,10,160" x:Name="CircularContentBlock" FontSize="24"  Foreground="{ThemeResource ForegroundBrush}">
            </RichTextBlock>
        </ScrollViewer>
        <Rectangle x:Name="TopCropRect" HorizontalAlignment="Stretch" VerticalAlignment="Top" Fill="{ThemeResource BackgroundBrush}" Visibility="Collapsed"></Rectangle>
        <Rectangle x:Name="BottomCropRect" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Fill="{ThemeResource BackgroundBrush}" Visibility="Collapsed"></Rectangle>
    </Grid>
</Page>
