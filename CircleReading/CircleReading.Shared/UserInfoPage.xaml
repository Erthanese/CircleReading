<Page
    x:Class="CircleReading.UserInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CircleReading"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="5,0" VerticalAlignment="Top">
            <TextBlock Margin="0,0,0,0" Style="{ThemeResource  GroupHeaderTextBlockStyle}" Foreground="{ThemeResource AppAcentColorBrush}">
                Are you a Native-English Speaker?</TextBlock>
            <ToggleSwitch x:Name="NativeSwitch" OffContent="Non-Native" OnContent="Native" IsOn="True"></ToggleSwitch>
            <TextBlock Margin="0,20,0,0" Style="{ThemeResource GroupHeaderTextBlockStyle}" Foreground="{ThemeResource AppAcentColorBrush}">
                What is your Gender?</TextBlock>
            <ToggleSwitch x:Name="GenderSwitch" OffContent="Male" OnContent="Female"></ToggleSwitch>
            <!--<TextBlock Margin="0,20,0,0" Style="{ThemeResource GroupHeaderTextBlockStyle}" Foreground="{ThemeResource AppAcentColorBrush}">
                Using smartphone with touchscreen?</TextBlock>
            <ToggleSwitch OffContent="No" OnContent="Yes" IsOn="True"></ToggleSwitch>-->
        </StackPanel>
    </Grid>
</Page>
